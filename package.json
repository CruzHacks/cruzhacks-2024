{
  "name": "turborepo-firebase",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "dotenv -- turbo run build",
    "deploy": "dotenv -- turbo run build --parallel && turbo run deploy --filter=main-site --filter=live-site --filter=functions",
    "dev": "dotenv -- turbo run dev --parallel",
    "emulators": "firebase emulators:start",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "start": "dotenv -- concurrently yarn:dev yarn:emulators"
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "dotenv-cli": "^7.3.0",
    "firebase-tools": "^12.1.0",
    "prettier": "^2.8.8",
    "turbo": "^1.9.8",
    "typescript": "~5.1.0"
  },
  "packageManager": "yarn@1.22.0",
  "engines": {
    "node": ">=14.0.0",
    "yarn": ">=1.0.0"
  }
}
